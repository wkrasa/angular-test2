{
    "root": true,
    "extends": "../../.eslintrc.json",
    "overrides": [
        {
            "files": ["*.js"],
            "env": {
                "es6": true,
                "node": true
            },
            "extends": [
                "eslint:recommended"
            ],
            "parserOptions": {
                "ecmaVersion": 2020
            },
            "rules": {
                "quotes": ["error", "single"],
                "semi": ["error", "always"],
                "no-var": ["error"]
            }
        }
    ]
}
